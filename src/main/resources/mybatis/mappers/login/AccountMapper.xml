<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="clone.asiana.asiana_clone.login.mapper.AccountMapper">

    <insert id="registerUser">
        insert into
        flights.users(username,password,email,phone)
        values(#{name}, #{password}, #{email},#{phone})
    </insert>

    <select id="findPW" resultType="clone.asiana.asiana_clone.login.dto.AccountUserDTO">
        select
            *
        from flights.users
        where email = #{email}
    </select>

</mapper>